<horizontal>
	<vertical>
		<dropdown-list-setting
			id='players'
			text='Selected Player'
			value='selectedPlayer'
			options='playerList'
			apply-on-change='true'
		/>

		<button id='addPlayerButton' on-click='addPlayerButtonClick' text='Add Player' pad-bottom='5' />

		<button on-click='settingsButtonClick' id='settingsButton' text='Playlist Settings' pad-bottom='20'/>

		<primary-button on-click='createButtonOnClick' id='createButton' text='Generate Playlist'/>

		<modal size-delta-x='100' size-delta-y='35' id='settingsModal' show-event='settingsModalShow' click-off-closes='true' hide-event='settingsModalHide'  move-to-center='true'>
			<horizontal bg='round-rect-panel'>
				<vertical>
					<checkbox-setting id='includeUnplayed' value='includeUnplayedValue' text='Include Unplayed Maps' apply-on-change='true'/>
					<checkbox-setting id='rankedOnly' value='rankedOnlyValue' text='Ranked Only' apply-on-change='true'/>
					<list-setting id='order' value='orderValue' choices='playlistOrderList' text='Playlist Order' apply-on-change='true' />
					<button text='Close' id='settingsCloseButton' on-click='settingsCloseButtonClicked'/>
				</vertical>
			</horizontal>
		</modal>

		<modal size-delta-x='50' size-delta-y='30' id='loadingModal' show-event='loadingModalShow' hide-event='loadingModalHide' click-off-closes='false' move-to-center='true'>
			<horizontal bg='round-rect-panel'>
				<vertical>
					<text text='Loading...' />
					<loading/>
				</vertical>
			</horizontal>
		</modal>

		<modal size-delta-x='35' size-delta-y='20' id='successModal' show-event='successModalShow' hide-event='successModalHide' click-off-closes='true' move-to-center='true'>
			<horizontal bg='round-rect-panel'>
				<vertical>
					<text text='Success!'/>
					<button text='OK' id='successOkButton' on-click='successOkButtonClick'/>
				</vertical>
			</horizontal>
		</modal>

		<modal size-delta-x='35' size-delta-y='20' id='failModal' show-event='failModalShow' hide-event='failModalHide' click-off-closes='true' move-to-center='true'>
			<horizontal bg='round-rect-panel'>
				<vertical>
					<text text='An error occured! More details in log.'/>
					<button text='OK' id='failOkButton' on-click='successOkButtonClick'/>
				</vertical>
			</horizontal>
		</modal>

		<modal-keyboard clear-on-open='true' show-event='keyboardShow' id='keyboard' hide-event='keyboardHide' click-off-closes='true' move-to-center='true' on-enter='keyboardOnEnter'/>

		<modal size-delta-x='100' size-delta-y='100' show-event='playerListModalShow' id='playerListModal' hide-event='playerListModalHide' click-off-closes='true' move-to-center='true'>
			<horizontal bg='round-rect-panel'>
				<vertical>

					<text text='Search Results' font-size='10' pad-bottom='5' align='Center'/>
					<text text='placeholder' id='resultsAmtText' font-size='5' align='Center' pad-bottom='20'/>
					
					<horizontal pad-top='10'>
						<image pref-width='20' pref-height='20' preserve-aspect='true' id='scoresaberPfp' pad-top='5' pad-left='20'/>
						<vertical>
							<text text='placeholder' id='nameText' font-size='6' align='Right' pad-bottom='20'/>
							<text text='placeholder' id='rankText' font-size='6' align='Right'/>
						</vertical>
						
					</horizontal>

					<horizontal>
						<button text='Close' id='addPlayerModalCancelButton' on-click='addPlayerModalCancelButtonClick' />
						<button text='Add' id='addPlayerModalAddButton' on-click='addPlayerModalAddButtonClick'/>
					</horizontal>

				</vertical>
			</horizontal>
		</modal>
	</vertical>
</horizontal>